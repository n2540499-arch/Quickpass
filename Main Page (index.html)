<script>
function submitData() {
    let type = document.getElementById("vehicleType").value;
    let code = document.getElementById("vehicleCode").value;

    if (type === "" || code === "") {
        alert("Please fill all fields.");
        return;
    }

    alert("Vehicle confirmed!\nType: " + type + "\nCode: " + code);

    // Redirect to next page (later you’ll create it)
    // You can change "route.html" to any page you want
    window.location.href = "route.html";
}
</script>

